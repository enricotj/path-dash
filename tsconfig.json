{
  "compilerOptions": {
    // Target latest version of ECMAScript
    "target": "esnext",
    // path to output dir
    "outDir": "./dest/",
    // enable strict null checks for non-relative imports
    "strictNullChecks": true,
    // Search under node_modules for non-relative imports
    "moduleResolution": "node",
    // Process and infer types from .js files
    "allowJs": true,
    // use typescript to transpile jsx to js
    "jsx": "react",
    "baseUrl": "./src",
    "lib": [
      "es2015",
      "DOM.Iterable",
      "ES2016.Array.Include",
      "ES2017.Object",
      "DOM"
    ],
    "module": "es6",
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  }
}